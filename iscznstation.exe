import tkinter as tk
from tkinter import ttk

class ISCZNStationApp:
    def __init__(self, root):
        self.root = root
        self.root.title("ISCZN Station")
        self.notebook = ttk.Notebook(root)
        self.notebook.pack(expand=True, fill='both')
        self.adicionar_aba()

        btn_frame = tk.Frame(root)
        btn_frame.pack()
        tk.Button(btn_frame, text="➕ Nova Aba", command=self.adicionar_aba).pack(side='left')
        tk.Button(btn_frame, text="❌ Fechar Aba", command=self.fechar_aba).pack(side='left')

    def adicionar_aba(self):
        aba = tk.Frame(self.notebook)
        self.notebook.add(aba, text=f"Aba {len(self.notebook.tabs()) + 1}")
        tk.Label(aba, text="Conteúdo da aba").pack()

    def fechar_aba(self):
        if self.notebook.tabs():
            self.notebook.forget(self.notebook.index("current"))

if __name__ == "__main__":
    root = tk.Tk()
    app = ISCZNStationApp(root)
    root.mainloop()

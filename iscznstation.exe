import tkinter as tk
import webbrowser

def pesquisar(event=None):
    termo = entrada.get()
    if termo:
        url = f"https://www.google.com/search?q={termo}"
        webbrowser.open(url)

# Criar janela principal
janela = tk.Tk()
janela.title("ISCZN Station - Pesquisa")
janela.geometry("600x150")
janela.configure(bg="#f2f2f2")

# TÃ­tulo
titulo = tk.Label(janela, text="ðŸ”Ž ISCZN Station - Pesquisa Google", font=("Arial", 16), bg="#f2f2f2")
titulo.pack(pady=10)

# Campo de entrada
entrada = tk.Entry(janela, font=("Arial", 14), width=50)
